<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<bean id="dao" class="test.dao.MembersDao">
	<constructor-arg name="user" value="scott"/>
	<constructor-arg name="pwd" value="tiger"/>
</bean>

<bean id="membersService" class="spring04_anno.MembersService">
	<property name="dao" ref="dao" />
</bean>

<bean id="membersController" class="test.controller.MembersController">
	<property name="service" ref="membersService"/>
</bean>
</beans>
